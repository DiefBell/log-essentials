{
  "name": "log-essentials",
  "version": "2.0.0",
  "description": "Basic logger with support for namespaces, color, levels and timestamps.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc --project tsconfig.build.json -w",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "no-circ-deps": "dpdm --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "test": "jest --coverage",
    "test:e2e": "jest --config jest-e2e.config.js",
    "example:es6": "yarn build && node example-es6/index.js",
    "example:es5": "yarn build && node example-es5/index.js"
  },
  "files": [
    "lib/**/*",
    "README.md",
    "LICENSE.txt"
  ],
  "keywords": [
    "log",
    "fancy",
    "essential",
    "logger",
    "colors",
    "levels",
    "timestamp",
    "icons",
    "console",
    "error",
    "warning",
    "namespace",
    "prefix"
  ],
  "author": "Tim Strasser",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "fancy-log": "^2.0.0",
    "log-symbols": "4.1.0"
  },
  "devDependencies": {
    "@types/fancy-log": "^1.3.1",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "dpdm": "^3.9.0",
    "eslint": "^8.15.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XENOTpro/log-essentials.git"
  },
  "bugs": {
    "url": "https://github.com/XENOTpro/log-essentials/issues"
  },
  "homepage": "https://github.com/XENOTpro/log-essentials#readme"
}
